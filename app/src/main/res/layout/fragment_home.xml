                                    android:layout_height="wrap_content"
                                    android:text="工作   3.78GB"
                                    android:textSize="9sp"

                                    android:textColor="@color/system_blue1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_more" />

            </LinearLayout>


        </RelativeLayout>

    </com.luo.a10.view.MyRoundLayout>

